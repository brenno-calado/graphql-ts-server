{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@spec/*": ["spec/*"],
      "@test/*": ["__test__/*"]
    },
    "rootDir": "src",
    "strict": true,
    "target": "ES2021"
  },
  "compileOnSave": true
}